@model Tuple<IEnumerable<FirstProjectTahalf.Models.ProjectHome>, FirstProjectTahalf.Models.ProjectUser,
                                IEnumerable<FirstProjectTahalf.Models.ProjectCategory>, IEnumerable<FirstProjectTahalf.Models.ProjectProduct>,
                                IEnumerable<FirstProjectTahalf.Models.ProjectStore>, FirstProjectTahalf.Models.ProjectStore,
                                FirstProjectTahalf.Models.ProjectProduct>
@{
    var item = Model.Item1.ToList();
}


<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ogani | Template</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/customerdashbordstatic/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/customerdashbordstatic/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/customerdashbordstatic/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/customerdashbordstatic/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/customerdashbordstatic/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/customerdashbordstatic/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/customerdashbordstatic/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/customerdashbordstatic/css/style.css" type="text/css">
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>
    @*<img src="~/customerdashbordstatic/img/breadcrumb.jpg" />*@
    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__logo">
            <a href="/Home/Index"><img src=@Url.Content("~/images/"+@item[0].Logoimg) style="height:75px; width:75px; border-radius:20%;" alt=""></a>
        </div>
        <div class="humberger__menu__cart">
            <ul>
                <li><a href="#"><i class="fa fa-heart"></i> </a></li>
                <li><a href="#"><i class="fa fa-shopping-bag"></i></a></li>
            </ul>
            <div class="header__cart__price"></div>
        </div>
        <div class="humberger__menu__widget">
            <div class="header__top__right__language">
                <img src="~/customerdashbordstatic/img/language.png" alt="">
                <div>English</div>
                <span class="arrow_carrot-down"></span>
                <ul>
                    <li><a href="#">English</a></li>
                </ul>
            </div>

        </div>
        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                <li class="active"><a href="/Home/Index">Home</a></li>
                <li><a href="/Home/Shops">Stores</a></li>
                <li><a href="/Home/contact">Contact</a></li>
            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="header__top__right__social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-pinterest-p"></i></a>
        </div>
        <div class="humberger__menu__contact">
            <ul>
                <li><i class="fa fa-envelope"></i> @item[0].Email</li>
                <li>@item[0].Freeshippinglimit</li>
            </ul>
        </div>
    </div>
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__left">
                            <ul>
                                <li><i class="fa fa-envelope"></i> @item[0].Email</li>
                                <li>@item[0].Freeshippinglimit</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__right">
                            <div class="header__top__right__social">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-linkedin"></i></a>
                                <a href="#"><i class="fa fa-pinterest-p"></i></a>
                            </div>
                            <div class="header__top__right__language">
                                <img src="~/customerdashbordstatic/img/language.png" alt="">
                                <div>English</div>
                                <span class="arrow_carrot-down"></span>
                                <ul>
                                    <li><a href="#">English</a></li>
                                </ul>
                            </div>
                            @if (Model.Item2 == null)
                            {
                                <div class="header__top__right__auth">
                                    <a asp-controller="RegLog" asp-action="SigInSignUp"><i class="fa fa-user"></i>Login</a>
                                </div>
                            }
                            else
                            {
                                <div class="header__top__right__auth">
                                    <a asp-controller="Home" asp-action="editProfile"  asp-route-id="@Model.Item2.Userid"><i class="fa fa-user"></i>@Model.Item2.Fname @Model.Item2.Lname</a>
                                </div>

                                <div class="header__top__right__auth">
                                    <a asp-controller="RegLog" asp-action="SigInSignUp" style="margin-right:10px";><i></i>LogOut</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__logo">
                        <a href="/Home/Index">  <img src=@Url.Content("~/images/"+@item[0].Logoimg) style="height:75px; width:75px; border-radius:20%;" alt="" /></a>
                    </div>
                </div>
                <div class="col-lg-6" style="display: flex; justify-content: center;">
                    <nav class="header__menu">
                        <ul>
                            <li class="active" id="Home"><a href="/Home/Index">Home</a></li>
                            <li id="Stores"><a href="/Home/Shops">Stores</a></li>
                            <li id="Contact"><a href="/Home/contact">Contact</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__cart">
                        <ul>
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            @if (Model.Item2 == null)
                            {
                                <li><a href="#"><i class="fa fa-shopping-bag"></i> </a></li>
                            }
                            else
                            {
                                <li><a href="/Home/cartDetails"><i class="fa fa-shopping-bag"></i><span>@ViewBag.cartItemsCount</span></a></li>
                            }
                        </ul>
                        @*<div class="header__cart__price">item</div>*@
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    @RenderBody()
    <!-- Footer Section Begin -->
    <footer class="footer spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <div class="footer__about__logo">
                            <a href="/Home/Index"><img src=@Url.Content("~/images/"+@item[0].Logoimg) style="height:75px; width:75px; border-radius:20%;" alt=""></a>
                        </div>
                        <ul>
                            <li>Address: @item[0].Address</li>
                            <li>Phone: @item[0].Phonenumber</li>
                            <li>Email: @item[0].Email</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 offset-lg-1">
                    <div class="footer__widget">
                        <h6>Useful Links</h6>
                        <ul>
                            <li><a href="#">About Us</a></li>
                            <li><a href="#">About Our Shop</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="footer__widget">
                        <h6>Join Our Newsletter Now</h6>
                        <p>Get E-mail updates about our latest shop and special offers.</p>
                        <form action="#">
                            <input type="text" placeholder="Enter your mail">
                            <button type="submit" class="site-btn">Subscribe</button>
                        </form>
                        <div class="footer__widget__social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="footer__copyright">
                        <div class="footer__copyright__payment"><img src="~/customerdashbordstatic/img/payment-item.png" alt=""></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="~/customerdashbordstatic/js/jquery-3.3.1.min.js"></script>
    <script src="~/customerdashbordstatic/js/bootstrap.min.js"></script>
    <script src="~/customerdashbordstatic/js/jquery.nice-select.min.js"></script>
    <script src="~/customerdashbordstatic/js/jquery-ui.min.js"></script>
    <script src="~/customerdashbordstatic/js/jquery.slicknav.js"></script>
    <script src="~/customerdashbordstatic/js/mixitup.min.js"></script>
    <script src="~/customerdashbordstatic/js/owl.carousel.min.js"></script>
    <script src="~/customerdashbordstatic/js/main.js"></script>

    <script src="~/customerdashbordstatic/js/jquery-ui.min.js"></script>

</body>

</html>