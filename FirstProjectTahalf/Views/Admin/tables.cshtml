@model Tuple<IEnumerable<FirstProjectTahalf.Models.ProjectUser>,
                    IEnumerable<FirstProjectTahalf.Models.ProjectCategory>,
                    IEnumerable<FirstProjectTahalf.Models.ProjectProduct>,
                    IEnumerable<FirstProjectTahalf.Models.ProjectTestimonial>>
@{
    ViewData["Title"] = "tables";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row my-4">
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-header pb-0">
                            <h6>Users table</h6>
                        </div>
                        <div class="card-body px-0 pt-0 pb-2">
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Logo</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Fname</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Lname</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Email</th>
                                            <th class="text-secondary opacity-7"></th>
                                            <th class="text-secondary opacity-7"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model.Item1)
                                        {

                                            <tr>
                                                <td>
                                                    <img src=@Url.Content("~/images/"+item.ImagePath) alt="" style="height:50px; width:50px" ;>
                                                </td>
                                                <td>
                                                    <h6 class="mb-0 text-sm">@item.Fname</h6>
                                                </td>
                                                <td>
                                                    <h6 class="mb-0 text-sm">@item.Lname</h6>
                                                </td>

                                                <td>
                                                    <span class="text-secondary text-xs font-weight-bold">@item.Email</span>
                                                </td>

                                                <td class="align-middle">
                                                    <a asp-controller="ProjectUsers" asp-action="Edit" asp-route-id="@item.Userid" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                                        Edit
                                                    </a>
                                                </td>
                                                <td class="align-middle">
                                                    <a asp-controller="ProjectUsers" asp-action="Delete" asp-route-id="@item.Userid" style="color: red; font-size: 0.75rem !important; font-weight: 600 !important;" data-toggle="tooltip" data-original-title="Edit user">
                                                        Delete
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





    <div class="row my-4">
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-header pb-0">
                            <h6>Category table</h6>
                            <a asp-controller="ProjectCategories" asp-action="Create" style="color: lawngreen;">Add</a>
                        </div>
                        <div class="card-body px-0 pt-0 pb-2">
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Logo</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">name</th>
                                            <th class="text-secondary opacity-7"></th>
                                            <th class="text-secondary opacity-7"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model.Item2)
                                        {

                                            <tr>
                                                <td>
                                                    <img src=@Url.Content("~/images/"+item.ImagePath) alt="" style="height:50px; width:50px" ;>
                                                </td>
                                                <td>
                                                    <h6 class="mb-0 text-sm">@item.Name</h6>
                                                </td>
                                                <td class="align-middle">
                                                    <a asp-controller="ProjectCategories" asp-action="Edit" asp-route-id="@item.Categoryid" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                                        Edit
                                                    </a>
                                                </td>
                                                <td class="align-middle">
                                                    <a asp-controller="ProjectCategories" asp-action="Delete" asp-route-id="@item.Categoryid" data-toggle="tooltip" data-original-title="Edit user" style="color: red; font-size: 0.75rem !important; font-weight: 600 !important;">
                                                        Delete
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="row my-4">
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-header pb-0">
                            <h6>Products table</h6>
                            <a asp-controller="ProjectProducts" asp-action="Create" style="color: lawngreen;">Add</a>
                        </div>
                        <div class="card-body px-0 pt-0 pb-2">
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0" id="example">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Logo</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">  Quntity</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">  ProPricse</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">  ProSale</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">  discount</th>
                                            <th class="text-secondary opacity-7"></th>
                                            <th class="text-secondary opacity-7"></th>

                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model.Item3)
                                        {

                                            <tr>
                                                <td>
                                                    <img src=@Url.Content("~/images/"+item.ImagePath) alt="" style="height:50px; width:50px" ;>
                                                </td>
                                                <td>
                                                    <h6 class="mb-0 text-sm">@item.Productname</h6>
                                                </td>
                                                <td class="align-middle text-center">
                                                    <span class="text-secondary text-xs font-weight-bold">@item.Quntitiy</span>
                                                </td>
                                                <td class="align-middle text-center">
                                                    <span class="text-secondary text-xs font-weight-bold">$@item.Propricse</span>
                                                </td>
                                                <td class="align-middle text-center">
                                                    <span class="text-secondary text-xs font-weight-bold">$@item.Prosale</span>
                                                </td>
                                                <td class="align-middle text-center">
                                                    <span class="text-secondary text-xs font-weight-bold">%@item.Discount</span>
                                                </td>
                                                <td class="align-middle">
                                                    <a asp-controller="ProjectProducts" asp-action="Edit" asp-route-id="@item.Productid" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                                        Edit
                                                    </a>
                                                </td>

                                                <td class="align-middle">
                                                    <a asp-controller="ProjectProducts" asp-action="Delete" asp-route-id="@item.Productid" style="color: red; font-size: 0.75rem !important; font-weight: 600 !important;" data-toggle="tooltip" data-original-title="Edit user">
                                                        Delete
                                                    </a>
                                                </td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div class="row my-4">
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-header pb-0">
                            <h6>Testtimonial table</h6>
                        </div>
                        <div class="card-body px-0 pt-0 pb-2">
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Message</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">user IMG</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">user Fullname</th>
                                            <th class="text-secondary opacity-7"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model.Item4)
                                        {

                                            <tr>

                                                <td>
                                                    <h6 class="mb-0 text-sm">@item.Message</h6>
                                                </td>

                                                <td>
                                                    <h6 class="mb-0 text-sm">@item.Publishdate</h6>
                                                </td>

                                                @foreach (var item3 in Model.Item1)
                                                {
                                                    if (item3.Userid == item.Userid)
                                                    {
                                                        <td>
                                                            <img src=@Url.Content("~/images/" + item3.ImagePath) alt="" style="height:50px; width:50px" ;>
                                                        </td>
                                                        <td>
                                                            <h6 class="mb-0 text-sm">@item3.Fname @item3.Lname</h6>
                                                        </td>
                                                        break;
                                                    }
                                                }

                                                <td class="align-middle">
                                                    <a asp-controller="ProjectTestimonials" asp-action="Delete" asp-route-id="@item.TestId" style="color: red; font-size: 0.75rem !important; font-weight: 600 !important;" data-toggle="tooltip" data-original-title="Edit user">
                                                        Delete
                                                    </a>
                                                </td>

                                            </tr>

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>



