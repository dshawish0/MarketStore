<script>

    window.addEventListener('load', () => HideRemove())

    function HideRemove() {
        var element = document.getElementById("tables");
        //element.classList.remove("nav-link  ");
        element.classList.add("active");

        var element2 = document.getElementById("editHomePage");
        element2.classList.remove("active");

        var element3 = document.getElementById("orders");
        element3.classList.remove("active");

        var element4 = document.getElementById("Index");
        element4.classList.remove("active");

    }

</script>