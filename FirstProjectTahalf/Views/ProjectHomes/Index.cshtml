@model IEnumerable<FirstProjectTahalf.Models.ProjectHome>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Freeshippinglimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phonenumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supportworktime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logoimg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Homeimg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Freeshippinglimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phonenumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supportworktime)
            </td>
            <td>
                <img src=@Url.Content("~/images/"+item.Logoimg) style="height:75px; width:75px; border-radius:20%;" />
            </td>
            <td>
                <img src=@Url.Content("~/images/"+item.Homeimg) style="height:75px; width:75px; border-radius:20%;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Homeid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Homeid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Homeid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
