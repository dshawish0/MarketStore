<script>

    window.addEventListener('load', () => HideRemove())

    function HideRemove() {
        var x = document.getElementById("example_wrapper");
        x.style.display = "none";
    }

    document.getElementById("pdf").addEventListener("click", myFunction);

    function myFunction() {
    document.querySelector(".buttons-pdf").click();
}

