@model Tuple<IEnumerable<FirstProjectTahalf.Models.ProjectHome>, FirstProjectTahalf.Models.ProjectUser,
                                            IEnumerable<FirstProjectTahalf.Models.ProjectCategory>, IEnumerable<FirstProjectTahalf.Models.ProjectProduct>,
                                            IEnumerable<FirstProjectTahalf.Models.ProjectStore>, FirstProjectTahalf.Models.ProjectStore,
                                            FirstProjectTahalf.Models.ProjectProduct>
@{
    ViewData["Title"] = "pushOrder";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    float cost = 0;
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set_bg" style="background-image: url(/customerdashbordstatic/img/gradients-for-photoshop-background-ui-ohhappiness.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Checkout</h2>
                    <div class="breadcrumb__option">
                        <a href="/Home/Index">Home</a>
                        <span>Checkout</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row">
        </div>
        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form  asp-controller="Home" asp-action="pushOrder">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Fist Name<span>*</span></p>
                                    <input type="text" value="@Model.Item2.Fname" readonly>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Last Name<span>*</span></p>
                                    <input type="text" value="@Model.Item2.Lname" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Country<span>*</span></p>
                            <input type="text" id="Country" name="Country">
                        </div>
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input type="text" id="Address" name="Address" placeholder="Street Address" class="checkout__input__add">
                        </div>
                        <div class="checkout__input">
                            <p>Town/City<span>*</span></p>
                            <input type="text" id="City" name="City">
                        </div>
                        <div class="checkout__input">
                            <p>Postcode / ZIP<span>*</span></p>
                            <input type="text" id="ZIP" name="ZIP">
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input type="text" id="Phone" name="Phone">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="text" value="@Model.Item2.Email" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Order notes<span>*</span></p>
                            <input type="text" id="notes" name="notes"
                                   placeholder="Notes about your order, e.g. special notes for delivery.">
                        </div>
                        <div class="checkout__input">
                            <h4>Payment Details</h4>
                        </div>
                        <div class="col-lg-6">
                            <div class="checkout__input">
                                <p>CardNumber<span>*</span></p>
                                <input type="text" id="CardNumber" name="CardNumber">
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <div class="d-flex">
                                <h4 class="col-7">Your Order</h4>
                                <button type="button" class="col-5 m-0 p-0" id="pdf" style="border: 0; background: transparent; margin-top:-86px !important; margin-left:80px !important"><img src="data:image/png;base64,"></button>
                            </div>
                            <div class="checkout__order__products">Products <span>Total</span></div>
                            <ul>
                                @foreach (var item in ViewBag.orderList)
                                {
                                    foreach (var item2 in Model.Item4)
                                    {
                                        if (item.Proid == item2.Productid)
                                        {
                                            cost += (float)@item2.Prosale;

                                            <li style="font-size: 14px;">@item2.Productname <span>$@item2.Prosale</span></li>
                                        }
                                    }
                                }

                            </ul>
                            <div class="checkout__order__subtotal">Subtotal <span>$@cost</span></div>
                            <div class="checkout__order__total">Total <span>$@cost</span></div>
                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <table class="table align-items-center mb-0" hidden id="example">
        <thead>
            <tr>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ProSale</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in ViewBag.orderList)
            {
                foreach (var item2 in Model.Item4)
                {
                    if (item.Proid == item2.Productid)
                    {

                        <tr>
                            <td>
                                <h6 class="mb-0 text-sm">@item2.Productname</h6>
                            </td>

                            <td class="align-middle text-center">
                                <span class="text-secondary text-xs font-weight-bold">$@item2.Prosale</span>
                            </td>
                        </tr>
                    }
                }
            }
            <tr>
                <td>
                    <h6 class="mb-0 text-sm">Total</h6>
                </td>

                <td class="align-middle text-center">
                    <span class="text-secondary text-xs font-weight-bold">$@cost</span>
                </td>
            </tr>

        </tbody>
    </table>

